{
    "position": "bottom", // Waybar position (top|bottom|left|right)
    "spacing": 15, // Gaps between modules (4px)
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad"
    ],
    "modules-right": [
        "sway/language",
        "pulseaudio",
        "clock",
        "tray"
    ],
	"clock": {
		"tooltip": false
	},
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "ï‹’"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "tray": {
        "spacing": 10
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% ON",
        "format-bluetooth": "{volume}% BLTH",
        "format-bluetooth-muted": "BLTH MUTE",
        "format-muted": "MUTE",
        "on-click": "pavucontrol"
    }
}
